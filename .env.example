# Local Development
APP_NAME=Webileri
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

APP_LOCALE=tr
APP_FALLBACK_LOCALE=tr
APP_TIMEZONE=Europe/Istanbul
APP_FAKER_LOCALE=tr_TR

LOG_CHANNEL=stack
LOG_LEVEL=debug

# --- Database (Local MySQL) ---
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=webileri
DB_USERNAME=root
DB_PASSWORD=

# --- Cache / Session / Queue (Local) ---
CACHE_STORE=file
SESSION_DRIVER=file
QUEUE_CONNECTION=database

# --- Redis (optional for local) ---
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# --- Mail ---
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# --- Filesystem ---
FILESYSTEM_DISK=local

VITE_APP_NAME="${APP_NAME}"
