APP_NAME=Webileri
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://app.webileri.example

APP_LOCALE=tr
APP_FALLBACK_LOCALE=tr
# APP_TIMEZONE=Europe/Istanbul
APP_FAKER_LOCALE=tr_TR

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

# === LOGGING ===
LOG_CHANNEL=stack
LOG_STACK=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=warning
LOG_DAILY_DAYS=7

# === DATABASE ===
DB_CONNECTION=sqlite
# When using SQLite the database file will be created automatically during setup.
DB_DATABASE=./database/database.sqlite
DB_FOREIGN_KEYS=true

# === CACHE & SESSION ===
CACHE_DRIVER=file
CACHE_STORE=file
# CACHE_PREFIX=
SESSION_DRIVER=cookie
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# === QUEUE ===
QUEUE_CONNECTION=database
QUEUE_FAILED_DRIVER=database-uuids
BROADCAST_CONNECTION=log

# === FILES ===
FILESYSTEM_DISK=public

# === CACHE BACKENDS ===
MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# === MAIL ===
MAIL_MAILER=smtp
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"
# STAGING için posta iletimi kapatmak isterseniz:
# MAIL_MAILER=log

# === ACCESS & TENANCY ===
PERMISSION_TEAMS=true
TEAM_FOREIGN_KEY=company_id
TENANT_RESOLVE_STRATEGY=host
# TENANT_COMPANY_ID=1

# === BUILD FLAGS ===
VITE_APP_NAME="${APP_NAME}"
VITE_USE_DYNAMIC_IMPORT=true
UI_THEME=light

# === SCHEDULER ===
CRON_BASE_MINUTES=10

# === ENV PROFILE NOTLARI ===
# Local geliştirme için aşağıdaki bayrakları override edin:
# APP_ENV=local
# APP_DEBUG=true
# APP_URL=http://localhost
# CACHE_DRIVER=database
# CACHE_STORE=database
# SESSION_DRIVER=database
# LOG_LEVEL=debug
# MAIL_MAILER=log
#
# Staging örneği:
# APP_ENV=staging
# APP_URL=https://staging.webileri.example
# LOG_LEVEL=notice
# MAIL_MAILER=log
# QUEUE_CONNECTION=database

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

FINANCE_AP_TOLERANCE_PERCENT=2
FINANCE_AP_TOLERANCE_ABSOLUTE=0
